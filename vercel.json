{
  "version": 2,
  "public": true,
  "github": {
    "repository": "shantanudesai/Pragmatech_QMS_Navigator-"
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/iso9001-tracker/index.html"
    },
    {
      "source": "/tracker",
      "destination": "/iso9001-tracker/index.html"
    },
    {
      "source": "/styles.css",
      "destination": "/iso9001-tracker/styles.css"
    },
    {
      "source": "/app.js",
      "destination": "/iso9001-tracker/app.js"
    },
    {
      "source": "/iso9001_plan.js",
      "destination": "/iso9001-tracker/iso9001_plan.js"
    },
    {
      "source": "/pcp-logo.svg",
      "destination": "/iso9001-tracker/pcp-logo.svg"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
} 