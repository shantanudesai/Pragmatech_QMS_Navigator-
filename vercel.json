{
  "version": 2,
  "public": true,
  "github": {
    "repository": "shantanudesai/pcp9001"
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/iso9001-tracker/index.html"
    },
    {
      "source": "/tracker",
      "destination": "/iso9001-tracker/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
} 